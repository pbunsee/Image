 <h1>List of all orders</h1>

 <div id="order">
   <% if @orders %>
     <% @orders.each do |order| %>
       <table id="order-#{order.id}">
           Order ID
           Sub-total
           Tax
           Shipping
           Total
           Status
             <%= "Order ID: #{order.id}" %>
             <%= "Sub-total: #{order.subtotal}" %>
             <%= "Tax: #{order.tax}" %>
             <%= "Shipping: #{order.shipping}" %>
             <%= "Order Date: #{order.created_at}" %>

          <!--render order_items -->
     <% end %>
   <% end %>
 </div>

