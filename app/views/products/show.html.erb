<div class="input-form">
  <% if @product.errors.any? %>
    <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li> <%= msg %> </li>
      <% end %>
    </ul>
  <% end %>

  <% if @product %>

    <%= form_for(@product, html: { method: :get } ) do |f| %>

      <div class="form-group">
        <span class="col-md-12 text-center">
          <h1>Show Product Details</h1>
        </span>
      </div>
      <div class="form-group">
        <span class="control-label text-left col-md-4">
          <%= f.label :name, 'Product Name' %>
        </span>
        <span class="text-left col-md-8">
          <%= f.text_field :name %>
        </span>
      </div>
      <div class="form-group">
        <span class="control-label text-left col-md-4">
          <%= f.label :price %>
        </span>
        <span class="text-left col-md-8">
          <%= f.text_field :price %>
        </span>
      </div>
      <div class="form-group">
        <span class="control-label text-left col-md-4">
          <%= f.label :size %>
        </span>
        <span class="text-left col-md-8">
          <%= f.text_field :size %>
        </span>
      </div>
      <div class="form-group">
        <span class="control-label text-left col-md-4">
          <%= f.label :brand %>
        </span>
        <span class="text-left col-md-8">
          <%= f.text_field :brand %>
        </span>
      </div>
      <div class="form-group">
        <span class="control-label text-left col-md-4">
          <%= f.label :description %>
        </span>
        <span class="text-left col-md-8">
          <%= f.text_field :description %>
        </span>
      </div>
      <div class="form-group">
        <span class="btn btn-block col-md-12">
          <%= link_to "Add to Cart", order_items_path, method: :post %> <br>
        </span>
      </div>

    <% end %>
  <% end %>
<div>

