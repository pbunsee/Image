<div class="input-form">
  <% if @product.errors.any? %>
    <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li> <%= msg %> </li>
      <% end %>
    </ul>
  <% end %>

  <% if @product %>

    <%= form_for(@product, html: { method: :get } ) do |f| %>

      <div class="form-group">
        <span class="col-md-12 text-center">
          <h1> <%= @product.name %> Product Details</h1>
        </span>
      </div>


      <div class="form-group">
        <span class="col-md-5">

        <%= image_tag @product.image_file_name, 'data-toggle' => "modal", 'data-target' => "#myModal" %>

        </span>

        <!-- Modal -->
          <div class="modal fade" id="myModal" role="dialog" >
            <div class="modal-dialog">
            
              <!-- Modal content-->
              <div class="modal-content">
                <div class="modal-header">

            
                  <button type="button" class="close" data-dismiss="modal">&times;</button>
                  <h4 class="modal-title"> <%= @product.name %> </h4>

                  <%= image_tag @product.image_file_name, width: "100%" %>  
                </div>

                <div class="modal-footer">
                  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
              </div>
              
            </div>
          </div>

        <span class="col-md-7">

          <div class="form-group">
            <span class="control-label text-left col-md-4">
              <%= f.label :name, 'Product Name' %>
            </span>

            <span class="text-left col-md-8">
              <%= f.text_field :name %>
            </span>

          </div>

          <div class="form-group">

            <span class="control-label text-left col-md-4">
              <%= f.label :price %>
            </span>
            <span class="text-left col-md-8">
              <%= f.text_field :price %>
            </span>
          </div>

          <div class="form-group">
            <span class="control-label text-left col-md-4">
              <%= f.label :size %>
            </span>
            <span class="text-left col-md-8">
              <%= f.text_field :size %>
            </span>
          </div>

          <div class="form-group">
            <span class="control-label text-left col-md-4">
              <%= f.label :brand %>
            </span>
            <span class="text-left col-md-8">
              <%= f.text_field :brand %>
            </span>
          </div>

          <div class="form-group">
            <span class="control-label text-left col-md-4">
              <%= f.label :description %>
            </span>
            <span class="text-left col-md-8">
              <%= f.text_field :description %>
            </span>
          </div>

          <div class="form-group">
            <span class="btn btn-block col-md-12">
              <%= link_to "Add to Cart", order_items_path, method: :post %> <br>
            </span>
          </div>

        </span>

    <% end %>

  <% end %>

<div>

