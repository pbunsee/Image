<div class="input-form">
  <% if @product.errors.any? %>
    <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li> <%= msg %> </li>
      <% end %>
    </ul>
  <% end %>

  <% if @product %>

    <%= form_tag(@product) do %>

      <div class="form-group">
        <span class="col-md-12 text-center">
          <h1>Show Product Details</h1>
        </span>
      </div>
      <div class="form-group">
        <span class="control-label text-left col-md-4">
          <%= label_tag :name, 'Product Name' %>
        </span>
        <span class="text-left col-md-4">
          <%= form_field_tag :name %>
        </span>
      </div>
      <div class="form-group">
        <span class="control-label text-left col-md-4">
          <%= label_tag :price %>
        </span>
        <span class="text-right col-md-8">
          <%= form_field_tag :price %>
        </span>
      </div>
      <div class="form-group">
        <span class="control-label text-left col-md-4">
          <%= label_tag :active %>
        </span>
        <span class="text-right col-md-8">
          <%= form_field_tag :active %>
        </span>
      </div>
      <div class="form-group">
        <span class="btn btn-block col-md-12">
          <%= link_to "Add to Cart", order_items_path, method: :post %> <br>
        </span>
      </div>

    <% end %>
  <% end %>
<div>

