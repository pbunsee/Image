<div class="input-form">
  <% if @product.errors.any? %>
    <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li> <%= msg %> </li>
      <% end %>
    </ul>
  <% end %>

  <%= form_for @product, url: product_path, html: {method: :patch, multipart: true } do |f| %>

  <div class="row">
    <span class="col-md-12 text-center">
    <h2>Editing: <%= @product.name %></h2>
  </div>

  
    <div class="row">

      <span class="col-md-5"></span>

      <span class="col-md-2 text-center">
          <%= f.label 'Product Image:' %>
      </span>

      <span class="col-md-5"></span>

    </div>

    <div class="row">

      <span class="col-md-4"></span>

      <span class="col-md-4 text-center">
        <%= image_tag @product.image.url(:medium) %>
      </span>

      <span class="col-md-4"></span>

    </div>



  <div class="row">

    <span class="col-md-4 text-center">
    </span>

    <span class="col-md-4 text-center">
      <hr>
    </span>

    <span class="col-md-4 text-center">
    </span>

  </div>

  <div class="form-group">
    <div class="row">

      <span class="col-md-4"></span>

      <span class="col-md-2">
        <%= f.label 'Product Name:' %>
      </span>

      <span class="col-md-2">
        <%= f.text_field :name, placeholder: 'Product Name' %>
      </span>

      <span class="col-md-4">
      </span>

    </div>

    <div class="row">

      <span class="col-md-4"></span>

      <span class="col-md-2">
        <%= f.label 'Price:' %>
      </span>

      <span class="col-md-2">
        <%= f.text_field :price, placeholder: 'Price' %>
      </span>

      <span class="col-md-4"></span>
    </div>

    <div class="row">

      <span class="col-md-4"></span>

      <span class="col-md-2"> 
        <%= f.label 'Size:' %>
      </span>

      <span class="col-md-2">    
          <%= f.select(:size, options_for_select([['Size 7', 7],
                                                  ['Size 7.5', 7.5],       
                                                  ['Size 8', 8],
                                                  ['Size 8.5', 8.5],
                                                  ['Size 9', 9],
                                                  ['Size 9.5', 9.5],
                                                  ['Size 10', 10],
                                                  ['Size 10.5', 10.5],
                                                  ['Size 11', 11],
                                                  ['Size 11.5', 11.5],
                                                  ['Size 12', 12]
                                                  ])) %>
    </span>

      <span class="col-md-4"></span>

    </div>

    <div class="row">

      <span class="col-md-4"></span>

      <span class="col-md-2"> 
        <%= f.label 'Brand:' %>
      </span>

      <span class="col-md-2">    
        <%= f.text_field :brand, placeholder: 'Brand' %>
      </span>

      <span class="col-md-4"></span>

    </div>

    <div class="row">

      <span class="col-md-4"></span>

      <span class="col-md-4">
        <hr>
      </span>

      <span class="col-md-4"></span>

    </div>

    <div class="row">

      <span class="col-md-5"></span>

      <span class="col-md-3 text-center">
         <%= f.file_field :image %>
      </span>

      <span class="col-md-4">
      </span>

    </div>

    <div class="row">

      <span class="col-md-4 text-center">
      </span>

      <span class="col-md-4 text-center">
        <hr>
      </span>

      <span class="col-md-4 text-center">
      </span>

    </div>

    <div class="row">

      <span class="col-md-4"></span>

      <span class="col-md-4 text-center" >  
        <%= f.label 'Description:' %>
      </span>

      <span class="col-md-4"></span>

    </div>

    <div class="row">

      <span class="col-md-2"></span>

      <span class="col-md-8 text-center">  
        <%= f.text_area :description, placeholder: 'Description:' %>
      </span>

      <span class="col-md-2"></span>

    </div>

    <div class="row">

      <span class="col-md-4 text-center">
      </span>

      <span class="col-md-4 text-center">
        <hr>
      </span>

      <span class="col-md-4 text-center">
      </span>

    </div>

    <div class="row">
      <span class="col-md-4"></span>
      
      <span class="col-md-4 text-center">
        <div class="buttons_div">
          <%= f.submit :Update %> <%= button_tag "Cancel", type: :cancel %>
        </div>
      </span>

      <span class="col-md-4"></span>

    </div>

  <% end %>

</div>


