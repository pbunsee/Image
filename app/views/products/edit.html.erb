<div class="input-form">
  <% if @product.errors.any? %>
    <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li> <%= msg %> </li>
      <% end %>
    </ul>
  <% end %>

  <%= form_for @product, url: product_path, html: {method: :patch, multipart: true } do |f| %>

  <div class="row">
    <span class="col-md-12 text-center">
    <h2>Edit Product</h2>
  </div>

  <div class="form-group">
    <div class="row">

      <span class="col-md-4"></span>

      <span class="col-md-2">
        <%= f.label 'Product Name' %>
      </span>

      <span class="col-md-2">
        <%= f.text_field :name, placeholder: 'Product Name' %>
      </span>

      <span class="col-md-4">
      </span>

    </div>

    <div class="row">

      <span class="col-md-4"></span>

      <span class="col-md-2">
        <%= f.label 'Price' %>
      </span>

      <span class="col-md-2">
        <%= f.text_field :price, placeholder: 'Price' %>
      </span>

      <span class="col-md-4"></span>
    </div>

    <div class="row">

      <span class="col-md-4"></span>

      <span class="col-md-2"> 
        <%= f.label 'Size' %>
      </span>

      <span class="col-md-2">    
        <%= f.text_field :size, placeholder: 'Size' %>
      </span>

      <span class="col-md-4"></span>

    </div>

    <div class="row">

      <span class="col-md-4"></span>

      <span class="col-md-2"> 
        <%= f.label 'Brand' %>
      </span>

      <span class="col-md-2">    
        <%= f.text_field :brand, placeholder: 'Brand' %>
      </span>

      <span class="col-md-4"></span>

    </div>
    
    <div class="row">

      <span class="col-md-4"></span>

      <span class="col-md-2">  
        <%= f.label 'Description' %>
      </span>

      <span class="col-md-2 text-field">  
        <%= f.text_area :description, placeholder: 'Description' %>
      </span>
    </div>

  <div class="row">

    <span class="col-md-4 text-center">
    </span>

    <span class="col-md-4 text-center">
      <hr>
    </span>

    <span class="col-md-4 text-center">
    </span>

  </div>

  </div>
      <div class="row">

      <span class="col-md-4"></span>

      <span class="col-md-2">
          <%= f.label 'Image' %>
      </span>
      <span class="col-md-2">
         <%= f.file_field :image %>
      </span>

      <span class="col-md-4">
      </span>

    </div>

    <div class="row">

      <span class="col-md-4 text-center">
      </span>

      <span class="col-md-4 text-center">
        <hr>
      </span>

      <span class="col-md-4 text-center">
      </span>

    </div>

    <div class="row">
      <span class="col-md-4"></span>
      
      <span class="col-md-4 text-center">
        <div class="buttons_div">
          <%= f.submit :Update %> <%= button_tag "Cancel", type: :cancel %>
        </div>
      </span>

      <span class="col-md-4"></span>

    </div>

  <% end %>

</div>


