<h1>List of all products</h1>

<div id="list-products">

<%= link_to "Add New Product", new_product_path %>

  <% if @products %>
    <table class="table table-striped table-hover">
      <thead>
        <th>Product Image</th>
        <th>Name</th>
        <th>Price</th>
        <th>Size</th>
        <th>Brand</th>
        <th>Description</th>
        <th>Admin</th>
      </thead>
        <% @products.each do |product| %>
          <tr id="product-#{product.id}">
            <td><%= link_to product_path product do %>
            <%= image_tag product.image.url(:small) %>
            <% end %>
          </td>
            <td><%= product.name %></td>
            <td><%= product.price %></td>
            <td><%= product.size %></td>
            <td><%= product.brand %></td>
            <td><%= product.description %></td>
            <td><%= link_to 'Edit', edit_product_path(product) %>  | <%= link_to "Delete", product_path(product), method: :delete %></td>
          </tr>
        <% end %>
    </table>
  <% end %>
 </div>

